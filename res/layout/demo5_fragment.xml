<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fullwhite"
     >

   
     
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         
         android:id="@+id/tv_demopage5content"
         
         android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"
         
         android:layout_centerVertical="true"
         android:layout_centerHorizontal="true"
         android:text="@string/demopage5content"
         android:textSize="@dimen/demo_text_size"
         android:textColor="@color/frag1_background"
         >
         
     </TextView>
     
     <TextView
          android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentBottom="true"
         android:layout_marginRight="10dp"
         android:layout_marginBottom="10dp"
         android:background="@drawable/gotit_circle"
         android:textColor="@color/fullwhite"
         android:text="@string/demogotit"
         android:id="@+id/tv_gotit"
         android:clickable="true"
         android:gravity="center"
         android:textSize="18sp"
         >
         
     </TextView>
</RelativeLayout>
